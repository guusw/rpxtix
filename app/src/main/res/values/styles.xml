<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ns_geel</item>
        <item name="colorPrimaryDark">@color/ns_blauw</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/ns_blauw</item>
        <!--<item name="windowContentOverlay">@null</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="titleTextColor">@color/ns_blauw</item>
        <item name="subtitleTextColor">@color/ns_blauw</item>
    </style>

    <style name="NsText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nssansreg</item>
        <item name="android:textColor">@color/ns_blauw</item>
    </style>

    <style name="NsTextTitle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nssansreg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ns_blauw</item>
    </style>

    <style name="NsTextBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nssansbold</item>
        <item name="android:textColor">@color/ns_blauw</item>
    </style>
</resources>
